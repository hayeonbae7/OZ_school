{
  "compilerOptions": {
    "target": "es2016",
    "module": "CommonJS",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true, 
    "skipLibCheck": true,
    "outDir": "dist",  //파일 저장 경로
    "noUncheckedIndexedAccess": true, //인덱스 접근을 엄격하게 제어
    //"lib": ["ES2022", "DOM"] //표준내장 객체 기본 설정(정발 필요한 경우만 사용)
  },"include": ["src/**/*"] //특정 파일이나 디렉토리를 컴파일에 포함시켜라
}
